<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFEC"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.Projecto_S.PopupOverlay">

        <ImageView
            android:onClick="finishs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_25" />

        <TextView
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Definicoes"
            android:textColor="#BC343534" />
    </androidx.appcompat.widget.Toolbar>

     <androidx.cardview.widget.CardView
         android:onClick="viewContact"
         android:id="@+id/card1"
         android:layout_marginTop="25dp"
        android:layout_below="@id/toolbar"
         android:background="@color/white"
         app:cardCornerRadius="20dp"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp"
         android:layout_width="match_parent"
         android:layout_height="60dp">

         <RelativeLayout
             android:layout_marginStart="10dp"
             android:layout_gravity="center"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <ImageView
                 android:id="@+id/image1"
                 android:layout_marginStart="8dp"
                 android:layout_centerVertical="true"
                 android:src="@drawable/icon_edit_contact"
                 android:layout_width="25dp"
                 android:layout_height="25dp"/>

             <TextView
                 style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                 android:textSize="16sp"
                 android:id="@+id/title1"
                 android:layout_marginStart="10dp"
                 android:layout_alignTop="@id/image1"
                 android:layout_toRightOf="@id/image1"
                 android:text="Contacto "
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:textSize="13dp"
                 android:layout_marginTop="1dp"
                 android:layout_alignStart="@id/title1"
                 android:layout_below="@id/title1"
                 android:text="Editar Contacto, Eliminar e adicionar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

         </RelativeLayout>
     </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:onClick="viewDilatationActivity"
        android:id="@+id/card2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card1"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image2"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icondilatacao"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:textSize="16sp"
                android:id="@+id/title2"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@id/image2"
                android:layout_toRightOf="@id/image2"
                android:text="Definir dilatação"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card2"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image3"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/edit_contact"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:textSize="16sp"
                android:id="@+id/title3"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@id/image3"
                android:layout_toRightOf="@id/image3"
                android:text=" opções de Paridade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>