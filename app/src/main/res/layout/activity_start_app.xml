<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartApp">

    <RelativeLayout
        android:id="@+id/relativeImage2"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/imageshs"
            android:layout_width="77dp"
            android:layout_height="77dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="266dp"
        android:gravity="center"
        android:layout_below="@+id/relativeImage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cont"
            android:textColor="@color/ic_launcher_background"
            android:layout_alignRight="@id/progress"
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/ic_launcher_background"
            android:layout_alignStart="@id/progress"
            android:text="Carregando..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<!--        <TextView-->
<!--            android:textSize="10pt"-->
<!--            android:layout_marginTop="90dp"-->
<!--            android:textColor="#A9B2E3"-->
<!--            android:layout_below="@id/progress"-->
<!--            android:gravity="center"-->
<!--            android:text="S.M.D"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
         <ProgressBar
             android:layout_marginTop="20dp"
             android:id="@+id/progress"
             android:progressBackgroundTint="#EF0253"
             android:progressTint="@color/ic_launcher_background"
             android:layout_marginStart="50dp"
             android:layout_marginEnd="50dp"
             android:layout_width="match_parent"
             style="@style/Widget.AppCompat.ProgressBar.Horizontal"
             android:layout_height="wrap_content"/>


    </RelativeLayout>


</RelativeLayout>