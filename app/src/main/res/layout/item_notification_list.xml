<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="6dp"
    tools:showIn="@layout/fragment_notificacao">

    <RelativeLayout
        android:id="@+id/idRelativeNotification"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="4dp"
            android:layout_below="@id/idHoraAlertaNotification"
            android:id="@+id/txt_iconName"
            android:background="@drawable/notification_alert"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <TextView
            android:id="@+id/textViewOptionsNotification"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/txt_iconName"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#0C0000" />

        <TextView
            android:id="@+id/txt_NomeParturienteNotification"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_toLeftOf="@id/textViewOptionsNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_iconName"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/txt_iconName"
            android:textColor="@color/CorParturient"
            android:textSize="18sp"
            tools:text="Parturiente" />
        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/idContactoMedico"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_toLeftOf="@id/textViewOptionsNotification"
            android:layout_below="@id/txt_NomeParturienteNotification"
            android:layout_alignStart="@id/txt_NomeParturienteNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/CorParturient"
            android:textSize="14sp"
            android:text="Idade e Hora de entrada"/>
        <TextView
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:id="@+id/idHoraAlertaNotification"
            android:layout_width="wrap_content"
            android:textColor="@color/CorParturient"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            tools:text="12:40:25 Pm"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>