<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText

            android:id="@+id/idNomeEditNurse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:hint="Nome : " />

        <EditText
            android:id="@+id/idNurseEditContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idNomeEditNurse"
            android:layout_alignStart="@+id/idNomeEditNurse"
            android:layout_alignEnd="@+id/idNomeEditNurse"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="0dp"
            android:hint="Contact : " />

        <EditText
            android:id="@+id/idNurseUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idNurseEditContact"
            android:layout_alignStart="@+id/idNomeEditNurse"
            android:layout_alignEnd="@+id/idNomeEditNurse"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="0dp"
            android:hint="Insira o Novo nome do Utilizador:" />

        <EditText
            android:id="@+id/idNursePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idNurseUser"
            android:layout_alignStart="@+id/idNomeEditNurse"
            android:layout_alignEnd="@+id/idNomeEditNurse"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="0dp"
            android:hint="Insira a nova Senha do Utilizador : " />

    </RelativeLayout>
</ScrollView>