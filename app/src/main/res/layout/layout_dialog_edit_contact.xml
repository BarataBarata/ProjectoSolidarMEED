<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/idNomeEditContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:hint="Nome completo" />

        <EditText
            android:id="@+id/idContactEditContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idNomeEditContact"
            android:layout_alignStart="@+id/idNomeEditContact"
            android:layout_alignEnd="@+id/idNomeEditContact"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:hint="Contact" />

        <EditText
            android:id="@+id/idUserDoctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idContactEditContact"
            android:layout_alignStart="@+id/idNomeEditContact"
            android:layout_alignEnd="@+id/idNomeEditContact"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:hint="Usuario :" />

        <EditText
            android:id="@+id/idSenhaUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idUserDoctor"
            android:layout_alignStart="@+id/idNomeEditContact"
            android:layout_alignEnd="@+id/idNomeEditContact"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:hint="Senha :" />
    </RelativeLayout>
</ScrollView>