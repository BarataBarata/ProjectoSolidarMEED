<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EDEFEC"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Users_List">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.Projecto_S.PopupOverlay">

        <ImageView
            android:onClick="finishs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_25" />

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Medicos e Enfermeiros"
            android:textColor="#BC343534" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:onClick="viewContact"
        android:id="@+id/card1"
        android:layout_marginTop="25dp"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image1"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/persons"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:textSize="16sp"
                android:id="@+id/title1"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@id/image1"
                android:layout_toRightOf="@id/image1"
                android:text="Lista de  mÃ©dicos  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:onClick="viewListEnfermeira"
        android:id="@+id/card2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card1"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image2"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/persons"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                android:textSize="16sp"
                android:id="@+id/title2"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@id/image2"
                android:layout_toRightOf="@id/image2"
                android:text="Lista de credenciais do centro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>