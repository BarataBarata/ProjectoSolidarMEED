<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EBF1ED"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ParturientesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVieParturiente"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           tools:listitem="@layout/item_parturientes_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
         android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:id="@+id/idNullResultParturiente"
        android:visibility="invisible"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Sem resultados de parturientes  "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>