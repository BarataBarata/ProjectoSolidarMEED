<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity_RegistarUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:background="@drawable/blue_bg"
            >
           <TextView

               android:textColor="@color/white"
               android:text="Ir para autenticação"
               android:textStyle="bold"
               android:onClick="finish"
               android:layout_marginEnd="16sp"
               android:gravity="end"
               android:layout_marginTop="10dp"
               android:layout_marginStart="10sp"
               android:src="@drawable/back_24"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView

                android:background="@color/black"
                android:layout_gravity="center"
                app:cardCornerRadius="35dp"
                android:layout_width="67sp"
                android:layout_height="50sp">
                <ImageView
                    android:background="@color/black"
                    android:src="@drawable/imageshs"
                    android:layout_gravity="center"
                    android:layout_width="67sp"
                    android:layout_height="50sp">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Registo do Utilizador"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="135dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                android:id="@+id/id_input_contacto"
                app:endIconDrawable="@drawable/contacto"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="50dp"
                android:hint="Insira o contacto :">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomStart="14dp"
                android:layout_below="@id/id_input_contacto"
                android:id="@+id/id_input_add_user"
                app:endIconDrawable="@drawable/ic_baseline_person_24"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="50dp"
                android:hint="Nome do usuario :">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@id/id_input_add_user"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                android:id="@+id/id_input_nova_senha"
                 app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:hint="Nova senha :">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@id/id_input_nova_senha"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                android:id="@+id/id_input_confirmar_senha"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:hint="Confirmar senha :">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="registar"
            android:onClick="registar"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/id_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>