                <TextView
                    android:id="@+id/textPara"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Opções de paridade (PARA)"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutPara"
                    android:layout_width="0dp"
                    android:layout_height="47dp"

                    app:layout_constraintEnd_toEndOf="@+id/textPara"

                    app:layout_constraintStart_toStartOf="@+id/textPara"
                    app:layout_constraintTop_toBottomOf="@+id/textPara"
                    >


                    <com.google.android.material.slider.Slider
                        android:id="@+id/para"
                        android:layout_width="313dp"
                        android:layout_height="52dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingLeft="0dp"
                        android:paddingTop="40dp"
                        android:paddingRight="0dp"
                        android:stepSize="1"
                        android:valueFrom="0"
                        android:valueTo="15"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_textview"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/para"
                        tools:ignore="MissingConstraints" />



                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Idade gestacional"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayoutPara"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayoutPara"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayoutPara" />

                <TextView
                    android:id="@+id/textSanitario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Opções de Unidades Sanitário"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch1" />

                <TextView
                    android:id="@+id/textTrasferencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Opções de Motivos de transferência"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_gestRangeSanitaria"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/spinner_gestRangeSanitaria"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_gestRangeSanitaria" />

                <Spinner
                    android:id="@+id/spinner_gestRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <Spinner
                    android:id="@+id/spinner_gestRangeSanitaria"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textSanitario"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textSanitario"
                    app:layout_constraintTop_toBottomOf="@+id/textSanitario" />

                <Spinner
                    android:id="@+id/spinner_gestRangeTrasferencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textTrasferencia"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textTrasferencia"
                    app:layout_constraintTop_toBottomOf="@+id/textTrasferencia" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="transferencia"
                    android:text="Transferido"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_gestRange"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="@+id/spinner_gestRange"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_gestRange" />

                <ProgressBar
                    android:visibility="invisible"
                    android:id="@+id/prgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/switch1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="-16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintEnd_toEndOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">


                    <com.google.android.material.slider.Slider
                        android:id="@+id/dilatation"
                        android:layout_width="313dp"
                        android:layout_height="52dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:paddingLeft="0dp"
                        android:paddingTop="40dp"
                        android:paddingRight="0dp"
                        android:stepSize="1"
                        android:valueFrom="0"
                        android:valueTo="10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/id0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_textview"
                        android:gravity="center"
                        android:text="  0  "
                        android:textColor="@android:color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/dilatation"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        style="@style/TextAppearance.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="#08C368"
        android:onClick="registar"
        app:srcCompat="@drawable/registo_parturiente" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>