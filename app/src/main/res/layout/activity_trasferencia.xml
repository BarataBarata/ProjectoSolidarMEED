<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EDEFEC"
    android:layout_height="match_parent"
    tools:context=".TrasferenciaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="#EDEFEC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="finish"
                    android:src="@drawable/back_25" />

                <TextView
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Trasferir"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/relativeTrans"
            android:layout_below="@id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagemTras"
                android:src="@drawable/mulhergravidabom2"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/txtNomeParturienteTrasf"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/imagemTras"
                android:gravity="center"
                android:text="Sara Maria"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardTras1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/relativeTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtOrigem"
                    android:layout_marginStart="16dp"
                    android:text="Destino "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:layout_marginEnd="16sp"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/txtOrigem"
                    android:id="@+id/destinoTrasferenciaX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_bias="0.0" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTras2"
            android:layout_marginTop="15dp"
            android:layout_below="@id/cardTras1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_below="@id/relative1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtOrigem2"
                    android:layout_marginStart="16dp"
                    android:text="Motivos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:layout_marginEnd="16sp"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_below="@id/txtOrigem2"
                    android:id="@+id/motivosTrasferenciaX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_bias="0.0" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/card15"
            android:layout_marginTop="15dp"
            android:layout_below="@id/cardTras2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_below="@id/relative1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/txtMotivo"
                    android:text=" Inserir outros motivos"
                    android:layout_marginEnd="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_below="@id/txtMotivo"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@id/card15"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="Trasferir"
            android:onClick="Trasferir"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</ScrollView>
