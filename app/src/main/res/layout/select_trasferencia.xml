<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBF1ED"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Opções de transferência "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_below="@id/txt"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/white">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:textSize="17dp"
            android:text="Transferida "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
   <Switch
       android:id="@+id/switchTransferencia"
       android:layout_marginEnd="16dp"
       android:layout_marginBottom="16dp"
       android:layout_marginTop="16dp"
    android:layout_gravity="end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:id="@+id/txtT1"
        android:layout_below="@id/card1"
        android:text="Origem da trasferencia"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_below="@id/txtT1"
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/white">

        <Spinner
            android:id="@+id/spinnerOrigem"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@id/card2"
        android:id="@+id/txtT2"
        android:text="Motivo da transferencia"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/txtT2"
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/white">
        <Spinner
            android:id="@+id/spinnerMotivos"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>