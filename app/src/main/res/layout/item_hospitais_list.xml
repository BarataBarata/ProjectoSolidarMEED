<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_hospitais">

    <RelativeLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/imagesh"
            android:id="@+id/id_ImagemSettings"
            android:layout_width="35dp"
            android:textSize="35dp"
            android:textColor="@color/purple_500"
            android:layout_height="30dp" />


        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_idHospitais"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/id_ImagemSettings"
            android:textColor="@color/CorParturient"
            android:textSize="15sp"
            tools:text="Hospitais" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>